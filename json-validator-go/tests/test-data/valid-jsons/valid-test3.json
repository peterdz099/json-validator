{
    "PolicyName": "LambdaAccess",
    "PolicyDocument": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "ssm:GetParameter",
            "lambda:InvokeFunction"
          ],
          "Resource": [
            "arn:aws:lambda:us-east-1:123456789012:function:Function1",
            "arn:aws:lambda:us-east-1:123456789012:function:Function2"
          ]
        }
      ]
    }
  }